<div class="container">
  <!-- Search Form -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="get" action="<%= url_for(controller: 'movies', action: 'index') %>" class="input-group mb-4 shadow-sm">
        <input type="text" name="query" class="form-control border-primary" placeholder="Search a movie..." value="<%= params[:query] %>">
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Movies Table -->
  <div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
      <thead class="thead-dark">
        <tr>
          <th class="text-center">Poster</th>
          <th>Title</th>
          <th>Year</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr class="align-middle">
            <td class="text-center">
              <img src="<%= movie['Poster'] %>" alt="Poster" class="rounded shadow-sm" width="80">
            </td>
            <td><strong><%= movie['Title'] %></strong></td>
            <td><%= movie['Year'] %></td>
            <td>
              <a href="<%= movie_path(movie['imdbID']) %>" class="btn btn-info btn-sm">
                <i class="fas fa-info-circle"></i> View
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>