<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-dark text-white text-center">
      <h2><%= @movie['Title'] %></h2>
    </div>
    <div class="card-body text-center">
      <img src="<%= @movie['Poster'] %>" alt="Poster" class="img-fluid rounded shadow-sm" width="200">

      <table class="table table-striped mt-4">
        <tbody>
          <tr><th>📅 Year</th><td><%= @movie['Year'] %></td></tr>
          <tr><th>⭐ Rating</th><td><%= @movie['imdbRating'] %></td></tr>
          <tr><th>⏳ Length</th><td><%= @movie['Runtime'] %></td></tr>
          <tr><th>🎭 Genre</th><td><%= @movie['Genre'] %></td></tr>
          <tr><th>🎬 Director</th><td><%= @movie['Director'] %></td></tr>
          <tr><th>🎭 Actors</th><td><%= @movie['Actors'] %></td></tr>
        </tbody>
      </table>
    </div>

    <div class="card-footer text-center">
      <a href="<%= movies_path %>" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
      </a>
    </div>
  </div>
</div>