<h1 class="text-center mt-4">üåç Country Directory</h1>

<div class="container">
  <!-- Search Form -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="get" action="<%= url_for(controller: 'countries', action: 'index') %>" class="input-group mb-4 shadow-sm">
        <input type="text" name="query" class="form-control border-primary" placeholder="Search a country..." value="<%= params[:query] %>">
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Countries Table -->
  <div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
      <thead class="thead-dark">
        <tr>
          <th class="text-center">Flag</th>
          <th>Name</th>
          <th>Capital</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% @countries.each do |country| %>
          <tr class="align-middle">
            <td class="text-center"><img src="<%= country['flags']['png'] %>" alt="Flag" class="rounded shadow-sm" width="80"></td>
            <td><strong><%= country['name']['common'] %></strong></td>
            <td><%= country['capital'] ? country['capital'].first : 'N/A' %></td>
            <td>
              <a href="<%= country_path(country['cca2']) %>" class="btn btn-info btn-sm">
                <i class="fas fa-info-circle"></i> View
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
